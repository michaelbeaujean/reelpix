<div class="playlist">
  <strong><%= playlist.name %></strong>
  <dl>
  <% playlist.titles.each do |title| %>
      <% if title.name %>
      <a href="http://www.crackle.com/c/<%= title.name.gsub(' ', '-') %>" target="_blank"><dd><%= title.name %></dd></a>
      <% end %>
    <% end %>
  </dl>
</div>  <!-- playlist -->





