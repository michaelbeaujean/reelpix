#title-result-container {
  padding: 10px;
  display: inline-block;
}

.title-result {
  background: #F2F2F2;
  width: 400px;
  height: 450px;
  overflow: scroll;
}

.title-result #title-name {
  font-size: large;
  font-weight: bold;
  font-style: oblique;
  text-decoration: underline;
}

.title-result img {
  padding: 10px;
}

.title-result #genre-rating {
  font-size: 12px;
  font-weight: bold;
  padding: 5px;
}

.title-result #description {
  font-style: oblique;
  padding: 5px;
}

.title-result #add-form {
  padding: 15px;
}
